<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.coinsliberty.wallet.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_signUpFragmnet"
            app:destination="@id/signUpFragmnet"
            app:launchSingleTop="true"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_bottomTabNavigator"
            app:destination="@id/bottomTabNavigator"
            app:launchSingleTop="true"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragmnet"
        android:name="com.coinsliberty.wallet.ui.signup.SignUpFragment"
        android:label="SignUpFragmnet"
        tools:layout="@layout/fragment_sign_up"
        />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.coinsliberty.wallet.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragmnet"
            app:destination="@id/signUpFragmnet" />

        <action
            android:id="@+id/action_loginFragment_to_bottomTabNavigator"
            app:launchSingleTop="true"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true"
            app:destination="@id/bottomTabNavigator" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.coinsliberty.wallet.ui.profile.ProfileFragmant"
        tools:layout="@layout/fragment_profile"
        android:label="ProfileFragment"
        />

    <fragment
        android:id="@+id/myWalletFragment"
        android:name="com.coinsliberty.wallet.ui.wallet.MyWalletFragment"
        tools:layout="@layout/fragment_my_wallet"
        android:label="WalletFragment"
        />

    <fragment
        android:id="@+id/bottomTabNavigator"
        android:name="com.coinsliberty.wallet.BottomFragmant"
        android:label="BottomActivityy"
        tools:layout="@layout/activity_bottom">

        <action
            android:id="@+id/action_bottomTabNavigator_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/bottomTabNavigator"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_bottomTabNavigator_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>
    <fragment
        android:id="@+id/pinFragment"
        tools:layout="@layout/fragment_pin"
        android:name="com.coinsliberty.wallet.ui.pin.PinFragment"
        android:label="PinFragment" />

</navigation>