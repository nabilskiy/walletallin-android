<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_dark_grey_top_cornered"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_cross" />

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:textAppearance="@style/H2"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Send BTC" />

    <FrameLayout
        android:layout_width="@dimen/dialog_make_transaction_dialog_ll_code_size"
        android:layout_height="@dimen/dialog_make_transaction_dialog_ll_code_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_ll_qr_code_marginTop"
        android:background="@drawable/bg_dialog_white"
        android:elevation="@dimen/dialog_ll_qr_code_elevation"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivQR"
            android:layout_width="@dimen/dialog_make_transaction_dialog_iv_code_size"
            android:layout_height="@dimen/dialog_make_transaction_dialog_iv_code_size"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mulish_regular"
        android:gravity="center|center_vertical"
        android:text="@string/use_link_below"
        android:textAppearance="@style/H8"
        android:textColor="#386FF9"
        android:textSize="@dimen/h7_text_size" />


    <TextView
        android:id="@+id/tvLinkReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_link_stroked_grey"
        android:ellipsize="end"
        android:fontFamily="@font/mulish_regular"
        android:maxLines="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:textAppearance="@style/H7"
        android:textColor="@color/white"
        android:textSize="@dimen/h7_text_size"
        tools:text="3E53XjqK4Cxt71BGeERYUri45445P2Vfhjhjhhh5453543kljfsd095235" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:drawablePadding="6dp"
        android:fontFamily="@font/mulish_regular"
        android:text="@string/copied"
        android:textAppearance="@style/H8"
        android:textColor="#008753"
        android:textSize="@dimen/h7_text_size"
        app:drawableStartCompat="@drawable/ic_copied" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_receive_dialog_close"
        android:fontFamily="@font/mulish_regular"
        android:text="@string/close"
        android:textAllCaps="false"
        android:textAppearance="@style/H7"
        android:textColor="@color/white" />


</LinearLayout>