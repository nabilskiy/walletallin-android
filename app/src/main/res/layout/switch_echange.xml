<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_switch_transaction"
    android:orientation="horizontal"
    android:padding="2dp">

    <TextView
        android:id="@+id/tvMin"
        style="@style/H4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/btn_switch_transaction"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
        android:text="@string/min"
        android:textAllCaps="false"
        android:textColor="@drawable/selector_color_blue_gray"
        tools:background="@drawable/btn_switch_transaction" />

    <View
        android:id="@+id/view0"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#4D8E8E93"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tvHalf"
        style="@style/H4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@null"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
        android:text="@string/half"
        android:textAllCaps="false"
        android:textColor="@drawable/selector_color_blue_gray"
        tools:background="@null" />

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="#4D8E8E93" />

    <TextView
        android:id="@+id/tvAll"
        style="@style/H4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@null"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
        android:text="@string/All"
        android:textColor="@drawable/selector_color_blue_gray"
        tools:background="@null" />

</LinearLayout>
