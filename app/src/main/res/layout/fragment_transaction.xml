<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transactionToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivWalletToolbarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_total_icon_margin_top"
            android:layout_marginEnd="@dimen/wallet_total_icon_margin_end"
            android:background="@drawable/ic_ring"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivTransactionLeftIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/transaction_left_icon_margin_start"
            android:layout_marginTop="@dimen/transaction_left_icon_margin_top"
            android:background="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/transactionSendButton"
            android:layout_width="@dimen/transaction_button_width"
            android:layout_height="@dimen/transaction_button_height"
            android:layout_marginStart="@dimen/transaction_button_margin_start"
            android:layout_marginTop="152dp"
            android:background="@drawable/btn_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTransactionSend"
            style="@style/H9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/transaction_button_text_margin_start"
            android:text="@string/transaction_send"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/transactionSendButton"
            app:layout_constraintStart_toEndOf="@id/ivTransactionSendIcon"
            app:layout_constraintTop_toTopOf="@id/transactionSendButton" />

        <ImageView
            android:id="@+id/ivTransactionSendIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/transaction_button_image_margin_start"
            android:background="@drawable/ic_arrow_up"
            app:layout_constraintBottom_toBottomOf="@id/transactionSendButton"
            app:layout_constraintStart_toStartOf="@id/transactionSendButton"
            app:layout_constraintTop_toTopOf="@id/transactionSendButton" />

        <View
            android:id="@+id/transactionRecieveButton"
            android:layout_width="@dimen/transaction_button_width"
            android:layout_height="@dimen/transaction_button_height"
            android:layout_marginEnd="@dimen/transaction_button_margin_end"
            android:layout_marginBottom="@dimen/transaction_button_margin_bottom"
            android:background="@drawable/btn_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/transactionSendButton" />

        <TextView
            android:id="@+id/tvTransactionRecieve"
            style="@style/H9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/transaction_button_text_margin_start"
            android:text="@string/transaction_receive"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/transactionRecieveButton"
            app:layout_constraintStart_toEndOf="@id/ivTransactionReceiveIcon"
            app:layout_constraintTop_toTopOf="@id/transactionRecieveButton" />

        <ImageView
            android:id="@+id/ivTransactionReceiveIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/transaction_button_image_margin_start"
            android:background="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/transactionSendButton"
            app:layout_constraintStart_toStartOf="@id/transactionRecieveButton"
            app:layout_constraintTop_toTopOf="@id/transactionRecieveButton" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvAvBalance"
                style="@style/H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVAILABLE BALANCE"
                android:textColor="@color/lightBlueLowOpacity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imWallet"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toStartOf="@+id/tvAvBalance"
                app:layout_constraintTop_toTopOf="@+id/tvAvBalance"
                app:srcCompat="@drawable/ic_wallet_disactive" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <TextView
                android:id="@+id/tvBalanceCrypto"
                style="@style/H1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.17382901"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameCrypto"
                style="@style/H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:text="BTC"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/tvBalanceCrypto"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <TextView
                android:id="@+id/tvBalanceFiat"
                style="@style/H10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48.340,59"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFiatName"
                style="@style/H11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="USD"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/tvBalanceFiat"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transactionToolbar"
        tools:listitem="@layout/item_transaction" />

    <TextView
        android:id="@+id/tvNoTransaction"
        style="@style/H7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_transaction"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transactionToolbar" />

    <ImageView
        android:id="@+id/ivNoTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/no_transaction_image_margin_bottom"
        android:background="@drawable/ic_no_transaction"
        app:layout_constraintBottom_toTopOf="@id/tvNoTransaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>