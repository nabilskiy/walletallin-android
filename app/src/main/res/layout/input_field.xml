<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvInputHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:lineHeight="20dp"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/etField"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_input_field"
        android:lineHeight="21dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvInputHeader"
        tools:hint="fsfmkfjmjsdk"
        android:inputType="textEmailAddress"
        />

    <CheckBox
        android:id="@+id/cbShowHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etField"
        android:button="@null"
        android:background="@drawable/selector_show_password"
        android:checked="true"
        />
</androidx.constraintlayout.widget.ConstraintLayout>