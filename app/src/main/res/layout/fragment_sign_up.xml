<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteGrey">

    <ImageView
        android:id="@+id/ivLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/sign_up_image_margin_top"
        android:layout_marginStart="@dimen/sign_up_image_margin_start"
        />

    <TextView
        android:id="@+id/tvScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_with_upper"
        app:layout_constraintStart_toEndOf="@+id/ivLock"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/sign_up_text_margin_top"
        android:layout_marginStart="@dimen/sign_up_text_margin_start"
        android:textColor="@color/darkGrey"
        style="@style/H1"
        />

    <com.example.moneybee.ui.widgets.inputField.InputFieldComponent
        android:id="@+id/ifcFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ifc_header="@string/first_name"
        app:layout_constraintTop_toBottomOf="@id/ivLock"
        android:layout_marginTop="@dimen/sign_up_first_name_margin_top"
        android:layout_marginStart="@dimen/sign_up_first_name_margin_start"
        android:layout_marginEnd="@dimen/sign_up_first_name_margin_end"
        />

    <com.example.moneybee.ui.widgets.inputField.InputFieldComponent
        android:id="@+id/ifcLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ifc_header="@string/last_name"
        app:layout_constraintTop_toBottomOf="@id/ifcFirstName"
        android:layout_marginTop="@dimen/sign_up_last_name_margin_top"
        android:layout_marginStart="@dimen/sign_up_last_name_margin_start"
        android:layout_marginEnd="@dimen/sign_up_last_name_margin_end"
        />

    <com.example.moneybee.ui.widgets.inputField.InputFieldComponent
        android:id="@+id/ifcEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ifc_header="@string/email"
        app:ifc_type="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/ifcLastName"
        android:layout_marginTop="@dimen/sign_up_email_margin_top"
        android:layout_marginStart="@dimen/sign_up_email_margin_start"
        android:layout_marginEnd="@dimen/sign_up_email_margin_end"
        />

    <com.example.moneybee.ui.widgets.inputField.InputFieldComponent
        android:id="@+id/ifcSignUpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ifc_header="@string/password"
        app:ifc_type="textPassword"
        app:layout_constraintTop_toBottomOf="@id/ifcEmail"
        android:layout_marginTop="@dimen/sign_up_password_margin_top"
        android:layout_marginStart="@dimen/sign_up_password_margin_start"
        android:layout_marginEnd="@dimen/sign_up_password_margin_end"
        />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ifcSignUpPassword"
        android:layout_marginStart="@dimen/sign_up_login_margin_start"
        android:layout_marginTop="@dimen/sign_up_login_margin_top"
        android:text="@string/login"
        android:textColor="@color/blue"
        style="@style/H4"
        />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/sign_up_button_width"
        android:layout_height="@dimen/sign_up_button_height"
        android:layout_marginBottom="@dimen/sign_up_button_margin_bottom"
        style="@style/ButtonGreyBorder"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textColor="@color/lightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>