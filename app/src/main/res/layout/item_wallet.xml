<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_wallet_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemWalletLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightOrange"
        >
        <ImageView
            android:id="@+id/ivItemWalletIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bitcoin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/tvItemWalletTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivItemWalletIcon"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            style="@style/H5"
            android:textColor="@color/darkBlue"
            />
        <TextView
            android:id="@+id/tvItemWalletType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivItemWalletIcon"
            tools:hint="type"
            android:textColor="@color/grey"
            style="@style/H4"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvItemWalletPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            tools:hint="price"
            style="@style/H5"
            android:textColor="@color/darkBlue"
            />

        <TextView
            android:id="@+id/tvItemWalletResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="10dp"
            tools:hint="result"
            android:textColor="@color/grey"
            style="@style/H4"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>