<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBottomSheetMakeTransfer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_light_dark_grey"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp">

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=""
        android:textAppearance="@style/H7"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Send BTC" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dialog_layout_marginTop"
        android:background="@drawable/bg_dialog_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDialogSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvToAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_make_transaction_tv_margin_start_end"
                android:text="@string/to_address"
                android:textAppearance="@style/H10"
                android:textColor="@color/darkBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clLink"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_clLink_height"
                android:layout_marginStart="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_clLink_marginTop"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"

                android:background="@drawable/bg_item_dialog_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvToAddress">

                <EditText
                    android:id="@+id/tvLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialog_send_tv_marginStart"
                    android:layout_marginEnd="@dimen/dialog_send_tv_marginStart"
                    android:background="@null"
                    android:gravity="start"
                    android:inputType="text"
                    android:textAppearance="@style/H8"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivQrCode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="16azaQHPThoQcf14o2XqmbG" />

                <ImageView
                    android:id="@+id/ivQrCode"
                    android:layout_width="@dimen/dialog_send_small_qr_code_width"
                    android:layout_height="@dimen/dialog_send_small_qr_code_height"
                    android:layout_marginEnd="@dimen/dialog_send_small_qr_code_margin_end"
                    android:src="@drawable/ic_qr_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvAmountToSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_make_transaction_tv_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_tv_amount_marginTop"
                android:text="@string/amount_to_send"
                android:textAppearance="@style/H10"
                android:textColor="@color/darkBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clLink" />

            <TextView
                android:id="@+id/tvSendMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_send_tv_amount_marginTop"
                android:layout_marginEnd="@dimen/dialog_make_transaction_tv_margin_start_end"
                android:padding="4dp"
                android:text="@string/send_max"
                android:textAppearance="@style/H10"
                android:textColor="@color/blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clLink" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSumCripto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_clLink_height"
                android:layout_marginStart="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_clLink_marginTop"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:background="@drawable/bg_item_dialog_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAmountToSend">


                <EditText
                    android:id="@+id/etAmountCripto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialog_send_tv_marginStart"
                    android:background="@null"
                    android:gravity="start"
                    android:inputType="numberDecimal"
                    android:textAppearance="@style/H8"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvCriptoName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0.25947531" />

                <TextView
                    android:id="@+id/tvCriptoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dialog_send_tv_marginEnd"
                    android:text="BTC"
                    android:textAppearance="@style/H8"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSumFiat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_clLink_height"
                android:layout_marginStart="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_clLink_marginTop"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:background="@drawable/bg_item_dialog_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSumCripto">


                <EditText
                    android:id="@+id/etAmountFiat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialog_send_tv_marginStart"
                    android:background="@null"
                    android:gravity="start"
                    android:inputType="numberDecimal"
                    android:textAppearance="@style/H10"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvFiatName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2671.53" />

                <TextView
                    android:id="@+id/tvFiatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dialog_send_tv_marginEnd"
                    android:text="USD"
                    android:textAppearance="@style/H10"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvNetworkFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_make_transaction_tv_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_network_fees_margin_top"
                android:text="@string/network_fees"
                android:textAppearance="@style/H10"
                android:textColor="@color/darkBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clSumFiat" />

            <ImageView
                android:id="@+id/ivHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_send_network_fees_icon_margin_start"
                android:layout_marginTop="@dimen/dialog_send_network_fees_icon_margin_top"
                android:padding="4dp"
                android:src="@drawable/ic_icon_ask_blue"
                app:layout_constraintStart_toEndOf="@id/tvNetworkFees"
                app:layout_constraintTop_toBottomOf="@id/clSumFiat" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSendSpinner"
                android:layout_width="@dimen/dialog_send_constraint_spinner_width"
                android:layout_height="@dimen/dialog_send_constraint_spinner_height"
                android:layout_marginStart="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_constraint_spinner_margin_top"
                android:background="@drawable/bg_item_dialog_send"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNetworkFees">

                <TextView
                    android:id="@+id/ivText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialog_make_transaction_dialog_send_tv_text_margin_start"
                    android:text="Normal"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dialog_make_transaction_dialog_send_iv_drop_margin_end"
                    android:src="@drawable/ic_drop_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSatPerByte"
                android:layout_width="@dimen/dialog_send_constraint_sat_width"
                android:layout_height="@dimen/dialog_send_constraint_sat_height"
                android:layout_marginTop="@dimen/dialog_send_constraint_sat_margin_top"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:background="@drawable/bg_item_dialog_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNetworkFees">

                <EditText
                    android:id="@+id/tvAmountSatPerByte"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialog_send_sat_margin_start"
                    android:background="@null"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:text="@string/sat_number"
                    android:textAppearance="@style/H8"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvsatPerByte"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvsatPerByte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dialog_send_sat_margin_end"
                    android:text="@string/sat_per_byte"
                    android:textAppearance="@style/H11"
                    android:textColor="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvAllowUnconfirmed"
                android:layout_width="@dimen/dialog_send_unconfirmed_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_make_transaction_tv_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_unconfirmed_top"
                android:text="@string/allow_uncinfirmed"
                android:textAppearance="@style/H8"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clSendSpinner" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/scReplaceable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_send_switch_margin_top"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:theme="@style/ColorSwitchStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSatPerByte"
                app:thumbTint="@color/darkGrey" />

            <View
                android:id="@+id/devideLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_send_deliver_line_height"
                android:layout_marginStart="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_deliver_line_margin_top"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:background="@color/lightGrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scReplaceable" />

            <Button
                android:id="@+id/btnSentCoin"
                style="@style/ButtonGreyBorder"
                android:layout_width="@dimen/sign_up_button_width"
                android:layout_height="@dimen/sign_up_button_height"
                android:layout_marginTop="@dimen/dialog_send_btn_margin_top"
                android:layout_marginEnd="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginBottom="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:gravity="center"
                android:text="@string/send_coin"
                android:textColor="@color/lightBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/devideLine" />

            <ImageView
                android:id="@+id/ivObmen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dialog_send_iv_obmen_marginTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/clSumCripto"
                app:srcCompat="@drawable/ic_obmen" />

            <ImageView
                android:id="@+id/ivDownLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_make_cl_transaction_margin_start_end"
                android:layout_marginTop="@dimen/dialog_send_btc_logo_margin_top"
                android:layout_marginBottom="@dimen/dialog_send_btc_logo_margin_bottom"
                android:background="@drawable/ic_bitcoin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/devideLine" />

            <TextView
                android:id="@+id/tvDownNetworkFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_send_btc_title_margin_start"
                android:layout_marginTop="@dimen/dialog_send_btc_logo_margin_top"
                android:text="@string/network_fees"
                android:textAppearance="@style/H8"
                android:textColor="@color/grey"
                app:layout_constraintStart_toEndOf="@id/ivDownLogo"
                app:layout_constraintTop_toBottomOf="@id/devideLine" />

            <TextView
                android:id="@+id/tvBTCTransferResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dialog_send_btc_down_result_margin_start"
                android:text="@string/btc_down_result"
                android:textAppearance="@style/H10"
                android:textColor="@color/darkGrey"
                app:layout_constraintStart_toEndOf="@id/ivDownLogo"
                app:layout_constraintTop_toBottomOf="@id/tvDownNetworkFees" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_iv_close_marginTop"
        android:layout_marginEnd="@dimen/dialog_iv_close_marginEnd"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>