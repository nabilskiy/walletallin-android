<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="ButtonGreen" >
        <item name="android:background">@drawable/btn_green</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonBlue" >
        <item name="android:background">@drawable/btn_blue</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonGreyBorder" >
        <item name="android:background">@drawable/btn_grey_border</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonGrey" >
        <item name="android:background">@drawable/btn_grey_border</item>
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DialogWhiteBG" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_white</item>
    </style>
    <style name="DialogGreenBG" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_green</item>
    </style>
    <style name="DialogBlueBG" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_blue</item>
    </style>
    <style name="DialogRedBG" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_red</item>
    </style>

    <style name="SendSpinnerStyle" >
        <item name="android:textSize">@dimen/h10_text_size</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="android:colorForeground">@color/grey</item>
        <item name="colorControlActivated">@color/darkGrey</item>
    </style>


    <!--BottomSheetDialog-->
    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SendDialog" parent="BottomSheetDialogTheme">
        <item name="bottomSheetStyle">@drawable/bg_dialog_white</item>
    </style>

</resources>